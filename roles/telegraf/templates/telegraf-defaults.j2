loki_url="{{ loki.url }}"
{% if loki.user is defined %}
loki_user="{{ loki.user }}"
{% endif %}
{% if loki.password is defined %}
loki_password="{{ loki.password }}"
{% endif %}
victoria_url="{{ victoria.url }}"
{% if victoria.user is defined %}
victoria_user="{{ victoria.user }}"
{% endif %}
{% if victoria.password is defined %}
victoria_password="{{ victoria.password }}"
{% endif %}
{% if metric_buffer_limit is defined %}
metric_buffer_limit={{ metric_buffer_limit }}
{% else %}
metric_buffer_limit=10000
{% endif %}
{% if metric_batch_size is defined %}
metric_batch_size={{ metric_batch_size }}
{% else %}
metric_batch_size=1000
{% endif %}
{% if interval is defined %}
interval="{{ interval }}"
{% else %}
interval="10s"
{% endif %}
{% if flush_interval is defined %}
flush_interval="{{ flush_interval }}"
{% else %}
flush_interval="10s"
{% endif %}
{% if vsphere_enabled is defined and vsphere_enabled %}
vsphere_urls="{{ vsphere_urls }}"
vsphere_username="{{ vsphere.username }}"
vsphere_password="{{ vsphere.password }}"
{% endif %}
{% if openldap_enabled is defined and openldap_enabled %}
openldap_host="{{ openldap.host }}"
openldap_bind_dn="{{ openldap.bind_dn }}"
openldap_bind_password="{{ openldap.bind_password }}"
{% endif %}
{% if nut_enabled %}
nut_server="{{ nut.server }}"
nut_port={{ nut.port|default(3493) }}
nut_username="{{ nut.username }}"
nut_password="{{ nut.password }}"
{% endif %}
{% for name,secret in user_secrets.items() %}
{{ name }}="{{ secret }}"
{% endfor %}